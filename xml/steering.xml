<?xml version="1.0" encoding="UTF-8"?>

<!-- Steering File for DMAHCAL -->

<DMAHCAL>

  <Settings>
    <!-- Analysis Mode -->
    <parameter name="Analysis_Only" value="false"/>
  </Settings>

  <!-- Mapping file -->
  <Mapping>
    <parameter name="Filename" value="/afs/desy.de/group/flc/pool/saivahu/mapping_files/Mapping_May2018.txt"/>
  </Mapping>

  <T0s>
    <!-- Number of T0s/Cherenkov -->
    <parameter name="nT0s" value="6"/>
    <!--Layer Chip Channel -->
    <parameter name="T0_1" value="1 169 29"/>
    <parameter name="T0_2" value="1 177 23"/>
    <parameter name="T0_3" value="3 201 29"/>
    <parameter name="T0_4" value="3 211 6"/>
    <parameter name="T0_5" value="4 217 23"/>
    <parameter name="T0_6" value="4 227 6"/>
  </T0s>

  <Steering> 
    <!-- Aborber type Tungsten/Iron -->
    <parameter name="Absorber" value="Iron"/>
    <!-- Run Number -->
    <parameter name="Run" value="5802"/>
    <!-- Input File PATH -->
    <!--parameter name="Input_PATH" value="/home/calice/Desktop/DAQ_PC/temp/"/-->
    <!--parameter name="Input_PATH" value="/pnfs/desy.de/calice/tb-desy/native/desyAhcal2018/February2018/slcioAhcalBif/"/-->
    <parameter name="Input_PATH" value="/nfs/dust/ilc/group/flchcal/AHCAL_Commissioning_2017_2018/2018Apr/Full_stack_test/cosmics/slcio"/>


    <!-- Output File PATH -->
    <parameter name="Output_PATH" value="/afs/desy.de/group/flc/pool/saivahu/Test/"/>
    <!-- Pedestal substraction -->
    <parameter name="Pedestal" value="true"/>
    <!-- ADC to MIP Conversion -->
    <parameter name="ADCtoMIP" value="true"/>
  </Steering>

  <Storage>
    <parameter name="File" value="/tmp/saivahu/Archive_Monitor.root"/>
  </Storage>

  <Analysis>
    <!-- if EBU present -->
    <parameter name="With_EBU" value="false"/>
    <!-- MIP Cut value -->
    <parameter name="MIP_Cut" value="0.5"/>
    <!-- Nlayers -->
    <parameter name="NLayer" value="38"/>
    <!-- nT0s for Analysis -->
    <parameter name="nT0s" value="0"/>
    <!-- Cut on Min Number of Hits in Event -->
    <parameter name="NMinHits" value="0"/>
    <!-- Cut on Max Number of Hits in Event -->
    <parameter name="NMaxHits" value="1000"/>
  </Analysis>

</DMAHCAL>
